<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ebebeb"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banh"
            android:id="@+id/backgroundType"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/background_imagetype">
            <ImageView
                android:id="@+id/imageType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mn_kho"
                android:layout_marginBottom="10dp"

                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/titleFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại món"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:background="#5affffff"
            android:layout_centerHorizontal="true"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/titleFood"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</android.support.v7.widget.CardView>