<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vnshine.phoenix.cooking.Activity.Main2Activity"
    tools:showIn="@layout/app_bar_main2">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="54dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/dishImageinfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:src="@drawable/mn_home" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView"
        android:background="@drawable/suggested_bar"
        android:elevation="10dp">
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/text_huongdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:textColor="#000000"
            />

    </ScrollView>

</RelativeLayout><!--<ImageView--><!--android:layout_width="match_parent"--><!--android:layout_height="200dp"--><!--android:src="@drawable/mn_home"--><!--android:id="@+id/dishImageinfo"--><!--android:layout_marginTop="54dp"--><!--android:layout_alignParentTop="true"--><!--android:layout_alignParentLeft="true"--><!--android:layout_alignParentStart="true"--><!--android:background="#00ff2a"--><!--/>-->